<body>
  
  <%- include('partials/navbar.ejs') -%>
      
<div class="container ask-card" >
  <a class="btn btn-success" href="/home"><h3>Ver perguntas</h3></a>
  <hr>

  
    <div class="card">
     
        <div class="card-header">
            <h3 style="font-weight: bold;">FAÇA UMA PERGUNTA NO FÓRUM</h3>
        </div>
        <div class="card-body">
            <form action="/salvarpergunta" method="POST">
                <label for="" style="font-weight: bold;">TITÚLO</label>
                <input type="text" class="form-control" name="titulo" placeholder="Titulo da perguntar">
                <br><LAbel style="font-weight: bold;">PERGUNTA</LAbel>
                <textarea placeholder="Descreva a sua pergunta" name="descricao" class="form-control" ></textarea>
                <br>
                <button type="submit" class="btn btn-success">Enviar pergunta</button>
            </form>
        </div>
    </div>
    
    <hr>
    
</div>






















</body>

